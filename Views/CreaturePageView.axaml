<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:MasterplanXP.ViewModels"
			 xmlns:view="using:MasterplanXP.Views"
			 x:DataType="vm:CreaturePageViewModel"
			 x:Class="MasterplanXP.Views.CreaturePageView">
	
		<Design.DataContext><vm:CreaturePageViewModel></vm:CreaturePageViewModel></Design.DataContext>
		
	<Grid ColumnDefinitions="*,*" RowDefinitions="Auto,*">
			<Grid Grid.Row="0" Grid.Column="0" Name="HeaderGrid" Grid.ColumnSpan="2">
			<Image Source="{SvgImage /Assets/Images/Headerbar-Transparent.svg}" Stretch="UniformToFill" />
			<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
				<TextBlock FontSize="30" FontWeight="DemiBold" TextAlignment="Center" TextWrapping="Wrap">
					<Label TextElement.Foreground="Goldenrod" FontSize="25" FontWeight="DemiBold" Content="{Binding Test}"></Label>
				</TextBlock>
				<Label Classes="sub1" HorizontalAlignment="Center" Content="Version 13.0.2.0 Beta"></Label>
				<Label Classes="sub2" HorizontalAlignment="Center" Content="Compiled Nov 29 2025"></Label>
			</StackPanel>
			</Grid>
		</Grid>


	<!-- Welcome to the Creature Page! -->
	
</UserControl>
